<style>
/* Drawer Styles */
.account_drawer {
  position: fixed;
  top: 0;
  right: 0;
  width: 350px;
  height: 100%;
  background-color: #fff;
  box-shadow: 0 5px 15px 0 rgba(0,0,0,.1);
  overflow-y: auto;
  transform: translateX(100%); /* Initially hide the drawer */
  transition: transform .6s cubic-bezier(.165,.84,.44,1) .1s;
  z-index: 1001;
}

.account_drawer.open {
  transform: translateX(0); /* Slide in the drawer */
}

#drawer-toggle,
#drawer-close {
  background: none;
  border: none;
  cursor: pointer;
}
#drawer-close{
  font-size: 32px;
}
.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7 !important;
  background: #e6e6e6;
  z-index: 1000;
  cursor: pointer;
  transition: opacity .4s,width 0s linear 0s;
}

.overlay.open {
   display: block;
}
  .list_items_drawer {
