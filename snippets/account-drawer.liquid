  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7 !important;
  background: #e6e6e6;
  z-index: 1000;
  cursor: pointer;
  transition: opacity .4s,width 0s linear 0s;
}

.overlay.open {
   display: block;
