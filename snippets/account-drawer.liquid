/* Drawer Styles */
.account_drawer {
  position: fixed;
  top: 0;
  right: 0;
  width: 344px;
  height: 100%;
  background-color: #fff;
  box-shadow: transform .6s cubic-bezier(.165,.84,.44,1) .1s;
  overflow-y: auto;
  transform: translateX(100%); /* Initially hide the drawer */
  transition: transform 0.3s ease;
  z-index: 1001;
}

.account_drawer.open {
  transform: translateX(0); /* Slide in the drawer */
}

